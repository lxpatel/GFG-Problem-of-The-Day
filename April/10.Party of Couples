
// Party of Couples
// April 10, 2024
// C++ Code

class Solution{
    public:
    int findSingle(int n, int arr[]){
        // code here
        
        if (n == 0) return 0;
        
        unordered_map<int,int> mp;
        
        for (int i=0; i<n; ++i){
            mp[arr[i]]++;
        }
        
        for (const auto& entry : mp){
            if (entry.second == 1){
                return entry.first;
            }
        }
        return -1;
    }
};
